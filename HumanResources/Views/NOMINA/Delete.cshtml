@model HumanResources.Models.NOMINA

@{
    ViewBag.Title = "Eliminar";
}

<center><h2>¿Desea eliminar la Nómina correspondiente a @Model.MES/@Model.ANO?</h2></center>

<div class="jumbotron">


    <div>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.ANO)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ANO)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.MES)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MES)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.MONTO_TOTAL)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MONTO_TOTAL)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <a href="/NOMINA/Index" class="btn btn-info">&laquo;Ver otras Nóminas</a>
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        }
    </div>
</div>
