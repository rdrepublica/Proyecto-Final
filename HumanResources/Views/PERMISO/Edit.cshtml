        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Actualizar" class="btn btn-block btn-success" />
            </div>
            <div class="col-md-offset-2 col-md-10">
                <br />
                <a href="/Home/Index" class="btn btn-info">&laquo;Ir al Menú Principal</a>
                <a href="/PERMISO/Index" class="btn btn-info">Ver Permisos&raquo;</a>
            </div>
        </div>
    </div>

</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
