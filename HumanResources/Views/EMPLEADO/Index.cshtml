}

<center><h2>Empleados</h2></center>
<div style="float: left">

    @using (Html.BeginForm("Index", "EMPLEADO", FormMethod.Get))
    {
        <p>
            <input type="text" name="searching" value="" placeholder="Buscar..." class="form-control" />
